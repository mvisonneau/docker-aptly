#!/usr/bin/env bash

# VARIABLES
export ARCHITECTURES=${ARCHITECTURES:-"[]"}
export DEPENDENCY_FOLLOW_ALL_VARIANTS=${DEPENDENCY_FOLLOW_ALL_VARIANTS:-"false"}
export DEPENDENCY_FOLLOW_RECOMMENDS=${DEPENDENCY_FOLLOW_RECOMMENDS:-"false"}
export DEPENDENCY_FOLLOW_SOURCE=${DEPENDENCY_FOLLOW_SOURCE:-"false"}
export DEPENDENCY_FOLLOW_SUGGESTS=${DEPENDENCY_FOLLOW_SUGGESTS:-"false"}
export DOWNLOAD_CONCURRENCY=${DOWNLOAD_CONCURRENCY:-"4"}
export DOWNLOAD_SOURCE_PACKAGES=${DOWNLOAD_SOURCE_PACKAGES:-"false"}
export GPG_DISABLE_SIGN=${GPG_DISABLE_SIGN:-"false"}
export GPG_DISABLE_VERIFY=${GPG_DISABLE_VERIFY:-"false"}
export PPA_CODENAME=${PPA_CODENAME:-""}
export PPA_DISTRIBUTOR_ID=${PPA_DISTRIBUTOR_ID:-"ubuntu"}
export ROOT_DIR=${ROOT_DIR:-"/aptly"}
export S3_PUBLISH_ENDPOINTS=${S3_PUBLISH_ENDPOINTS:-"{}"}

# CONFIGURE
/usr/local/bin/confd -onetime -backend env
